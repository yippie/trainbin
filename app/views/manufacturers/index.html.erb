<h1>Listing manufacturers</h1>
<div class="table-responsive">
<table class="table table-bordered table-condensed table-hover">
  <thead>
    <tr>
      <th><%= Manufacturer.human_attribute_name("name") %></th>
      <th><%= Manufacturer.human_attribute_name("control") %></th>
      <th><%= Manufacturer.human_attribute_name("track") %></th>
      <th><%= Manufacturer.human_attribute_name("trains") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @manufacturers.each do |manufacturer| %>
      <tr>
        <td><%= manufacturer.name %></td>
        <td><%= manufacturer.control %></td>
        <td><%= manufacturer.track %></td>
        <td><%= manufacturer.trains %></td>
        <td><%= link_to 'Show', manufacturer %></td>
        <td><%= link_to 'Edit', edit_manufacturer_path(manufacturer) %></td>
        <td><%= link_to 'Destroy', manufacturer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

