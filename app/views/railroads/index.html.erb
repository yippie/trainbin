<h1>Listing railroads</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Notes</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @railroads.each do |railroad| %>
      <tr>
        <td><%= railroad.name %></td>
        <td><%= railroad.notes %></td>
        <td><%= railroad.User %></td>
        <td><%= link_to 'Show', railroad %></td>
        <td><%= link_to 'Edit', edit_railroad_path(railroad) %></td>
        <td><%= link_to 'Destroy', railroad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

