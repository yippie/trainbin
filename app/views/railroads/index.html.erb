<h1>Listing railroads</h1>

<div class="table-responsive">
<table class="table table-bordered table-condensed table-hover">
  <thead>
    <tr>
      <th><%= Railroad.human_attribute_name("name") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @railroads.each do |railroad| %>
      <tr>
        <td><%= railroad.name %></td>
        <td><%= link_to 'Show', railroad %></td>
        <td><%= link_to 'Edit', edit_railroad_path(railroad) %></td>
        <td><%= link_to 'Destroy', railroad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

