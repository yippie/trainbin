<h1>Listing cars</h1>

<div class="table-responsive">
<table class="table table-bordered table-condensed table-hover">
  <thead>
    <tr>
      <th><%= Car.human_attribute_name("name") %></th>
      <th><%= Car.human_attribute_name("modelnumber") %></th>
      <th><%= Car.human_attribute_name("scale") %></th>
      <th><%= Car.human_attribute_name("cartype") %></th>
      <th><%= Car.human_attribute_name("quantity") %></th>
      <th><%= Car.human_attribute_name("Manufacturer") %></th>
      <th><%= Car.human_attribute_name("Railroad") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.name %></td>
        <td><%= car.modelnumber %></td>
        <td><%= car.scale %></td>
        <td><%= car.cartype %></td>
        <td><%= car.quantity %></td>
        <td><%= car.Manufacturer.name %></td>
        <td><%= car.Railroad.name %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

