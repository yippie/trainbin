<h1>Listing cars</h1>

<table>
  <thead>
    <tr>
      <th>Modelnumber</th>
      <th>Notes</th>
      <th>Scale</th>
      <th>Cartype</th>
      <th>Quantity</th>
      <th>User</th>
      <th>Manufacturer</th>
      <th>Railroad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.modelnumber %></td>
        <td><%= car.notes %></td>
        <td><%= car.scale %></td>
        <td><%= car.cartype %></td>
        <td><%= car.quantity %></td>
        <td><%= car.User %></td>
        <td><%= car.Manufacturer %></td>
        <td><%= car.Railroad %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

