<%= form_for(@car) do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :modelnumber %><br>
    <%= f.text_field :modelnumber %>
  </div>
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_field :notes %>
  </div>
  <div class="field">
    <%= f.label :scale %><br>
    <%= f.select( :scale , SCALES ) %>
  </div>
  <div class="field">
    <%= f.label :cartype %><br>
    <%= f.select( :cartype , CARTYPES ) %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.number_field :quantity %>
  </div>
  <div class="field">
    <%= f.label :Manufacturer_id %><br>
    <%= f.collection_select :Manufacturer_id , @manufacturer_array, :id , :name %>
  </div>
  <div class="field">
    <%= f.label :Railroad_id %><br>
    <%= f.collection_select :Railroad_id , @railroad_array, :id , :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
