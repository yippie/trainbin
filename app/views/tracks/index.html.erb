<h1>Listing tracks</h1>

<table>
  <thead>
    <tr>
      <th>Partnumber</th>
      <th>Notes</th>
      <th>Scale</th>
      <th>Tracktype</th>
      <th>Quantity</th>
      <th>User</th>
      <th>Manufacturer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= track.partnumber %></td>
        <td><%= track.notes %></td>
        <td><%= track.scale %></td>
        <td><%= track.tracktype %></td>
        <td><%= track.quantity %></td>
        <td><%= track.User %></td>
        <td><%= track.Manufacturer %></td>
        <td><%= link_to 'Show', track %></td>
        <td><%= link_to 'Edit', edit_track_path(track) %></td>
        <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

