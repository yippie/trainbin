<h1>Listing tracks</h1>

<div class="table-responsive">
<table class="table table-bordered table-condensed table-hover">
  <thead>
    <tr>
      <th><%= Track.human_attribute_name("name") %></th>
      <th><%= Track.human_attribute_name("partnumber") %></th>
      <th><%= Track.human_attribute_name("scale") %></th>
      <th><%= Track.human_attribute_name("tracktype") %></th>
      <th><%= Track.human_attribute_name("quantity") %></th>
      <th><%= Track.human_attribute_name("Manufacturer") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= track.name %></td>
        <td><%= track.partnumber %></td>
        <td><%= track.scale %></td>
        <td><%= track.tracktype %></td>
        <td><%= track.quantity %></td>
        <td><%= track.Manufacturer.name %></td>
        <td><%= link_to 'Show', track %></td>
        <td><%= link_to 'Edit', edit_track_path(track) %></td>
        <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

